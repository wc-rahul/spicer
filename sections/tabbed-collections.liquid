  <script>
    function updateCarouselIcons(container = document) {
      const iconsContainer = container.querySelector('.carousel-icons');
      if (!iconsContainer) return;
      iconsContainer.innerHTML = '';
      const activePanel = container.querySelector('.collection-tab-panel.active');
      if (!activePanel) return;
      const arrows = activePanel.querySelector('slideshow-arrows');
      if (arrows) {
        // Clone the arrows node
        const clonedArrows = arrows.cloneNode(true);
        iconsContainer.appendChild(clonedArrows);

        // Attach event listeners to the cloned arrows
        // Use correct selectors (no leading space)
        const realPrev = arrows.querySelector('.slideshow-control--previous[aria-label="Previous slide"]');
        const realNext = arrows.querySelector('.slideshow-control--next[aria-label="Next slide"]');
        const clonePrev = clonedArrows.querySelector('.slideshow-control--previous[aria-label="Previous slide"]');
        const cloneNext = clonedArrows.querySelector('.slideshow-control--next[aria-label="Next slide"]');

        if (clonePrev && realPrev) {
          clonePrev.addEventListener('click', function(e) {
            e.preventDefault();
            realPrev.click();
            // Re-attach listeners after click in case DOM changes
            setTimeout(() => updateCarouselIcons(container), 0);
          });
        }
        if (cloneNext && realNext) {
          cloneNext.addEventListener('click', function(e) {
            e.preventDefault();
            realNext.click();
            // Re-attach listeners after click in case DOM changes
            setTimeout(() => updateCarouselIcons(container), 0);
          });
        }
      }
    }

    function updateTabExtraButtons(container = document) {
        // Get the active tab
        const activeTab = container.querySelector('.collection-tab.active');
        if (!activeTab) return;
        const activeTabName = activeTab.getAttribute('data-tab-name');
        // Hide all extra buttons
        container.querySelectorAll('.tab-extra-btn').forEach(btn => {
          btn.style.display = 'none';
        });
        // Show the one that matches the active tab
        const matchingBtn = container.querySelector('.tab-extra-btn[data-tab-name="' + activeTabName + '"]');
        if (matchingBtn) {
          matchingBtn.style.display = '';
        }
      }
    function initCollectionTabs(container = document) {
      const tabs = container.querySelectorAll('.collection-tab');
      const panels = container.querySelectorAll('.collection-tab-panel');
      if (!tabs.length) return;
      tabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const idx = this.getAttribute('data-tab-index');
          tabs.forEach(t => t.classList.remove('active'));
          panels.forEach(p => p.classList.remove('active'));
          this.classList.add('active');
          container.querySelector('.collection-tab-panel[data-tab-index="' + idx + '"]').classList.add('active');
          updateTabExtraButtons(container);
          updateCarouselIcons(container);
        });
      });
      updateTabExtraButtons(container);
      updateCarouselIcons(container);
    }

    // Run on page load
    document.addEventListener('DOMContentLoaded', function() {
      initCollectionTabs(); 
    });

    // Run when section is reloaded in the Shopify editor
    document.addEventListener('shopify:section:load', function(event) {
      // event.target is the section container
      initCollectionTabs(event.target);
    });
  </script>
