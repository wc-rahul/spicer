

{% liquid
  if section.settings.collection_list != blank
    assign section_collections = section.settings.collection_list
    assign max_items_collections = section.settings.collection_list.count
  elsif template.name == 'list-collections'
    assign section_collections = collections
    assign max_items_collections = 10
  endif

    assign max_items = section.settings.max_products
  
    if section.settings.collection != blank and shop.products_count != 0
      assign section_products = section.settings.collection.products
      assign max_items = section_products.size | at_most: section.settings.max_products
    endif
  
    case section.settings.layout_type
      when 'grid'
        assign classes = 'resource-list--grid'
        capture styles
          echo '--resource-list-column-gap-desktop: ' | append: section.settings.columns_gap | append: 'px;'
          echo '--resource-list-row-gap-desktop: ' | append: section.settings.rows_gap | append: 'px;'
          echo '--resource-list-columns: repeat(' | append: section.settings.columns | append: ', 1fr);'
          echo '--resource-list-columns-mobile: repeat(' | append: section.settings.mobile_columns | append: ', 1fr);'
        endcapture
      when 'carousel'
        assign classes = 'resource-list__carousel'
        capture styles
          echo '--resource-list-column-gap-desktop: ' | append: section.settings.columns_gap | append: 'px;'
          echo '--column-count: ' | append: section.settings.columns | append: ';'
          echo '--column-count-mobile: ' | append: section.settings.mobile_columns | append: ';'
        endcapture
    endcase
  %}
  
  <div class="section-background color-{{ section.settings.color_scheme }}"></div>
  <div
    class="
      section
      section--{{ section.settings.section_width }}
      color-{{ section.settings.color_scheme }}
      section-resource-list
      spacing-style
      gap-style
      
    "
    style="
      --column-count-mobile: {{ section.settings.mobile_columns }};
      {% render 'spacing-style', settings: section.settings %}
      {% render 'gap-style', value: section.settings.gap %}
      {{ styles }}
    "
  >
    <div class="section-resource-list__header">
      {%- content_for 'block', type: '_product-list-content', id: 'static-header' -%}
    </div>
{% comment %}  Collection List  {% endcomment %}
  {% if section_collections == null %}
    {% for i in (1..max_items) %}
      {% assign section_collections = section_collections | append: ', ' %}
    {% endfor %}

    {% assign section_collections = section_collections | split: ',' %}
  {% endif %}

  
    <div class="collection-tabs-row{% if section.settings.icons_position == 'above_grid' %} with-icons{% endif %}">
      <div class="collection-tabs-scroll">
        <div class="collection-tabs">
          {%- for collection in section_collections limit: max_items_collections -%}
            <button
              class="collection-tab{% if forloop.first %} active{% endif %}  {{ section.settings.style_class_tab }}"
              data-tab-index="{{ forloop.index0 }}"
              type="button"
              data-tab-name="{{ collection.title | escape }}"
            >
              {{ collection.title }}
            </button>
          {%- endfor -%}
        </div>
      </div>
      {% if section.settings.layout_type == 'carousel' and section.settings.icons_position == 'above_grid' %}
        <style>
            slideshow-component slideshow-arrows{
                opacity:0;
            }
            @media (max-width: 768px) {
                slideshow-component slideshow-arrows{
                    opacity:1;
                }
                .carousel-icons {
                  display:none
                }
            }
        </style>
        <div class="carousel-icons">
        </div>
      {% endif %}
    </div>

  </div>

  
    <div class="collection-tabs-content">
      {% for collection in section_collections limit: max_items_collections %}
        <div class=" section section
      section--{{ section.settings.section_width }}
      color-{{ section.settings.color_scheme }}
      section-resource-list
      spacing-style
      gap-style collection-tab-panel{% if forloop.first %} active{% endif %}"  
      style="
      --column-count-mobile: {{ section.settings.mobile_columns }};
      {% render 'spacing-style', settings: section.settings %}
      {% render 'gap-style', value: section.settings.gap %}
      {{ styles }}  "
       
      data-tab-index="{{ forloop.index0 }}">
          {% if collection != blank and shop.products_count != 0 %}
            {%  assign section_products = collection.products %}
            {%  assign max_items = section_products.size | at_most: section.settings.max_products %}
          {% endif %}
          
          {% comment %} Collection ITEMS   {% endcomment %}
          {% capture list_items %}
              {% for i in (1..max_items) %}
                  {% if section_products.size > 0 %}
                  {% assign index = forloop.index0 %}
                  {% assign product = section_products[index] %}
                  {% else %}
                  {% assign product = null %}
                  {% endif %}
                  <div
                  class="resource-list__item"
                  >
                  {% content_for 'block', type: 'product-card', id: 'static-product-card', closest.product: product %}
                  </div>
          
                  {% unless forloop.last %}
                  <!--@list/split-->
                  {% endunless %}
          
              {% endfor %}
              {% endcapture %}
          
              {% liquid
              # Create an array from the list items to be used for different layout types
              assign list_items_array = list_items | strip | split: '<!--@list/split-->'
              %}
          
              <div
              class="
                  resource-list
                  {% if section.settings.layout_type == 'carousel' %}
                  force-full-width
                  {% endif %}
                  {% if section.settings.carousel_on_mobile and section.settings.layout_type != 'carousel' %}
                  hidden--mobile
                  {% endif %}
                  {{ classes }}
              "
              style="{{ styles }}"
              {% if section.settings.layout_type == 'grid' %}
                  data-testid="resource-list-grid"
              {% endif %}
              >
              {% case section.settings.layout_type %}
                  {% when 'grid' %}
                  {{ list_items }}
                  {% when 'carousel' %}
                  {% render 'resource-list-carousel',
                      ref: 'resourceListCarousel',
                      slides: list_items_array,
                      slide_count: max_items,
                      settings: section.settings
                  %}
                  {% when 'editorial' %}
                  {% render 'editorial-product-grid', items: list_items_array %}
              {% endcase %}
              </div>
          
              {% if section.settings.carousel_on_mobile and section.settings.layout_type != 'carousel' %}
              {% liquid
                  assign mobile_carousel_gap = section.settings.columns_gap
              %}
              <div
                  class="
                  resource-list
                  hidden--desktop
                  force-full-width
                  "
                  style="
                  --resource-list-column-gap-desktop: {{ mobile_carousel_gap }}px;
                  --column-count: {{ section.settings.columns }};
                  "
              >
                  {% render 'resource-list-carousel',
                  ref: 'resourceListCarouselMobile',
                  slides: list_items_array,
                  slide_count: max_items,
                  settings: section.settings
                  %}
              </div>
              {% endif %}
          
              <div
              class="section-resource-list__content"
              style="--horizontal-alignment: {{ section.settings.horizontal_alignment }};"
              >
              {%- content_for 'blocks' -%}
              </div>
              {% comment %} end of collection items  {% endcomment %}
        </div>
      {% endfor %}
    </div>
          
            

  
