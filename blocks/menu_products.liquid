{% assign block__id = block.id | replace: '_', '' | downcase %}

<div class="block_menumega-menu-products-{{ block__id }}" {{ block.shopify_attributes }}>
  {% for i in (1..block.settings.max_products) %}
    {% liquid
      assign product_key = 'product_' | append: i
      assign product = block.settings[product_key]
    %}
    
    {% if product != blank %}
      <div class="block_menumega-menu-product-card-{{ block__id }}">
        <a href="{{ product.url }}" class="block_menumega-menu-product-link-{{ block__id }}">
          <div class="block_menumega-menu-product-image-{{ block__id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                srcset="{{ product.featured_image | image_url: width: 600 }} 1x, {{ product.featured_image | image_url: width: 1200 }} 2x"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="{{ 600 | divided_by: block.settings.image_aspect_ratio | round }}"
              >
            {% else %}
              <div class="block_menumega-menu-product-placeholder-{{ block__id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            
            {% if product.compare_at_price > product.price %}
              <div class="block_menumega-menu-product-badge-{{ block__id }}">
                Sale
              </div>
            {% endif %}
          </div>
          
          <div class="block_menumega-menu-product-info-{{ block__id }}">
            <h3 class="block_menumega-menu-product-title-{{ block__id }}">
              {{ product.title }}
            </h3>
            
            <div class="block_menumega-menu-product-price-{{ block__id }}">
              {{ product.price | money }}
              {% if product.compare_at_price > product.price %}
                <span class="block_menumega-menu-product-compare-price-{{ block__id }}">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
            </div>
          </div>
        </a>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% style %}
  .block_menumega-menu-products-{{ block__id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .block_menumega-menu-product-card-{{ block__id }} {
    flex: 1;
    min-width: 0;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.2s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .block_menumega-menu-product-card-{{ block__id }}:hover {
    transform: translateY(-2px);
  }

  .block_menumega-menu-product-image-{{ block__id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .block_menumega-menu-product-image-{{ block__id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .block_menumega-menu-product-card-{{ block__id }}:hover .block_menumega-menu-product-image-{{ block__id }} img {
    transform: scale(1.05);
  }

  .block_menumega-menu-product-placeholder-{{ block__id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .block_menumega-menu-product-placeholder-{{ block__id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .block_menumega-menu-product-info-{{ block__id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .block_menumega-menu-product-title-{{ block__id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-decoration: none;
  }

  .block_menumega-menu-product-price-{{ block__id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: {{ block.settings.price_font_weight }};
    color: {{ block.settings.price_color }};
    margin: 0;
  }

  .block_menumega-menu-product-compare-price-{{ block__id }} {
    font-size: {{ block.settings.price_font_size | minus: 2 }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    margin-left: 8px;
  }

  .block_menumega-menu-product-badge-{{ block__id }} {
    position: absolute;
    top: 8px;
    left: 8px;
    background-color: {{ block.settings.badge_background_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .block_menumega-menu-product-link-{{ block__id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  @media screen and (max-width: 749px) {
    .block_menumega-menu-products-{{ block__id }} {
      flex-direction: column;
      gap: {{ block.settings.gap | divided_by: 2 }}px;
    }
  }
{% endstyle %}
