{%- if block.settings.promo_image != blank -%}
<div class="promo_blocks {% if block.settings.size == '2' %} double_size{% endif %}" data-mobile-menu="link-{{ block.settings.target | handleize }}">
    <div class="image_promo_blocks_one">
    <a href="{{ block.settings.btn_url }}">
        {{
          block.settings.promo_image
          | image_url: width: 1024
          | image_tag: loading: 'lazy', class: 'mega-menu__link-image', sizes: 'auto'
        }}
    </a>
      <div class="menu_image_text_overlay">
        <div class="menu_image_text_overlay">
          <p class="menu_img_title">{{ block.settings.promo_head }}</p>
          <p class="menu_img_desc">{{ block.settings.promo_sub }}</p>
          <a href="{{ block.settings.btn_url }}" class="button-secondary btn">{{ block.settings.btn_label }}</a>
        </div>
      </div>
    </div>
</div>
{%- endif -%}
{% schema %}
{
  "name": "Promotion Card",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "Promo Image"
    },
    {
        "type": "select",
        "id": "size",
        "label": "Select Promo Width",
        "options": [
            {
                "label": "one",
                "value": "1"
            },
            {
                "label": "two",
                "value": "2"
            }
        ],
        "default": "1"
    },
    {
      "type": "text",
      "id": "promo_head",
      "label": "Promo Heading",
      "default": "Promo"
    },
    {
      "type": "text",
      "id": "promo_sub",
      "label": "Promo Subtitle",
      "default": "Subtitle"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "Button"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Mobile Drawer Only"
    },
    {
      "type": "text",
      "id": "target",
      "label": "Enter Target Link",
      "info": "Enter Print to display content in print menu"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Promotion Card"
    }
  ]
}
{% endschema %}
