
{% assign block_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .block-collection-cards-{{ block_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    flex-wrap: wrap;
  }

  .block-collection-card-{{ block_id }} {
    flex: 1;
    min-width: 200px;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
    {% if block.settings.border_style != 'none' %}
      border: {{ block.settings.border_width }}px {{ block.settings.border_style }} {{ block.settings.border_color }};
    {% endif %}
  }

  .block-collection-card-{{ block_id }}:hover {
    transform: translateY(-2px);
  }

  .block-collection-card-image-{{ block_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    position: relative;
    overflow: hidden;
  }

  .block-collection-card-image-{{ block_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .block-collection-card-placeholder-{{ block_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .block-collection-card-placeholder-{{ block_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .block-collection-card-content-{{ block_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .block-collection-card-title-{{ block_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  .block-collection-card-text-{{ block_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px 0;
    line-height: 1.4;
  }

  .block-collection-card-button-{{ block_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: background-color 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .block-collection-card-button-{{ block_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .block-collection-cards-{{ block_id }} {
      flex-direction: column;
    }
    
    .block-collection-card-{{ block_id }} {
      min-width: auto;
    }
  }
{% endstyle %}

<div class="block-collection-cards-{{ block_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..2) %}
    {% liquid
      assign collection_key = 'collection_' | append: i
      assign button_text_key = 'button_text_' | append: i
      assign extra_text_key = 'extra_text_' | append: i
      
      assign collection = block.settings[collection_key]
      assign button_text = block.settings[button_text_key]
      assign extra_text = block.settings[extra_text_key]
    %}
    
    {% if collection != blank %}
      <a href="{{ collection.url }}" class="block-collection-card-{{ block_id }}">
        <div class="block-collection-card-image-{{ block_id }}">
          {% if collection.featured_image %}
            <img
              src="{{ collection.featured_image | image_url: width: 400 }}"
              alt="{{ collection.featured_image.alt | default: collection.title | escape }}"
              loading="lazy"
              width="400"
              height="{{ block.settings.image_height }}"
            >
          {% else %}
            <div class="block-collection-card-placeholder-{{ block_id }}">
              {{ 'collection-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        
        <div class="block-collection-card-content-{{ block_id }}">
          <h3 class="block-collection-card-title-{{ block_id }}">{{ collection.title }}</h3>
          
          {% if extra_text != blank %}
            <p class="block-collection-card-text-{{ block_id }}">{{ extra_text }}</p>
          {% endif %}
          
          {% if button_text != blank %}
            <span class="block-collection-card-button-{{ block_id }}">{{ button_text }}</span>
          {% endif %}
        </div>
      </a>
    {% endif %}
  {% endfor %}
</div>

